@page
@model LoginModel
@using Microsoft.Extensions.Configuration
@inject IConfiguration _config

@{
    ViewData["Title"] = "Log in";
}

@*<h1>@ViewData["Title"]</h1>*@

<style>



    .login-wrap {
        position: relative;
        background: #fff;
        border-radius: 10px;
        -webkit-box-shadow: 0 10px 34px -15px rgb(0 0 0 / 24%);
        -moz-box-shadow: 0 10px 34px -15px rgba(0,0,0,.24);
        box-shadow: 0 10px 34px -15px rgb(0 0 0 / 24%);
    }

        .login-wrap .icon {
            width: 80px;
            height: 80px;
            background: #8d448b;
            border-radius: 50%;
            font-size: 30px;
            margin: 0 auto;
            margin-bottom: 10px;
        }

        .login-wrap h3 {
            font-weight: 700;
            font-size: 32px;
            color: #8d448b;
        }

        .login-wrap .icon span {
            color: #fff;
        }

    .login-wrap-sec {
        padding: 7em 0;
    }
</style>

<div class="row  justify-content-center">
    <div class="col-md-6">
        <section class="login-wrap-sec">

            <div class="login-wrap p-4  ">
                <div class="icon d-flex align-items-center justify-content-center">
                    <span class="fa  fa-file-text-o"></span>
                </div>
                <form id="account" method="post">
                    <h3 class="text-center mb-4">@_config["ProjectSettings:AppName"]</h3>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.UserName"></label>
                        <input asp-for="Input.UserName" class="form-control" />
                        <span asp-validation-for="Input.UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group  d-md-flex">
                        <div class="w-50">
                            <div class="checkbox-wrap checkbox-primary">
                                <label asp-for="Input.RememberMe">
                                    <input asp-for="Input.RememberMe" checked="checked" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                        </div>
                        <div class="w-50 text-md-right">
                            <a id="forgot-password" asp-page="./ForgotPassword">Forgot password ?</a>
                        </div>
                    </div>


                    <div class="form-group ">
                        <button type="submit" class="btn btn-primary  btn-block p-3 px-5">Log in <i class="fa fa-sign-in"></i> </button>
                    </div>
                </form>

            </div>

        </section>
    </div>


</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
